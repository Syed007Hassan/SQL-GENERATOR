{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./build"
  },
  "include": ["src/**/*"]
}
